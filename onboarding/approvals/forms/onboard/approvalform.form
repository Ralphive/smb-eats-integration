    "schemaVersion": "1.1.0",
    "name": "approvalform",
    "revision": "1.0",
    "type": "task",
    "readOnly": false,
    "content": [
        {
            "id": "CustomerName",
            "type": "string",
            "label": "Customer Name",
            "readOnly": false,
            "value": "${context.orderData.CustomerName}",
            "constraints": {
                "required": false
            }
        },
        {
            "id": "Address",
            "type": "string",
            "label": "Address",
            "readOnly": false,
            "value": "${context.orderData.Address}",
            "constraints": {
                "required": false
            }
        },
        {
            "id": "ProductID",
            "type": "string",
            "label": "Product ID",
            "readOnly": false,
            "value": "${context.orderData.ProductID}",
            "constraints": {
                "required": true
            }
        }
    ],
    "decisions": [
        {
            "id": "approve",
            "text": "Approve",
            "decisionType": "positive"
        }
    ]
